<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded1_background"
    android:padding="8dp"
    android:orientation="vertical"
    android:gravity="center"
    android:elevation="6dp">

    <!-- Ikon Kesehatan Mental -->
    <ImageView
        android:id="@+id/widget_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_mental_health"
        android:contentDescription="Mental Health Icon"
        android:layout_marginEnd="8dp"
        android:layout_gravity="right"
        />

    <!-- Detail Kondisi -->
    <TextView
        android:id="@+id/widget_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kondisi Anda"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="left"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/widget_conclusion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kondisi Mental"
        android:textSize="11sp"
        android:layout_gravity="left"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/widget_recommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tetap tenang dan jaga pola tidur yang baik."
        android:textSize="8sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="4dp"/>
</LinearLayout>
