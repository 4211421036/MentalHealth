<!-- res/layout/bottom_navbar.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_background"
    android:elevation="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menu_home"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_home_active"
            android:contentDescription="Home"
            android:onClick="onNavItemClicked"/>

        <ImageView
            android:id="@+id/menu_chart"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_chart_inactive"
            android:contentDescription="Chart"
            android:onClick="onNavItemClicked"/>

        <ImageView
            android:id="@+id/menu_history"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_history_inactive"
            android:contentDescription="History"
            android:onClick="onNavItemClicked"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>